    function handleClick(event) {
            event.preventDefault();
            const speciesName = document.getElementById('speciesname').value;
            if (!speciesName === '') {
                alert('Species name is required');
                return;
            }
            fetch('/search', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ speciesName: speciesName }),
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to search');
                }
                return response.json();
            })
            .then(data => {
                if (data.speciesName) {
                    window.location.href = `/search?speciesName=${encodeURIComponent(data.speciesName)}`;
